@model GreaterSydneyLibraries.Models.Customer.CustomerIndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Customer Details</h1>

<div id="patronIndex">
    <table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp customTable" id="patronIndexTable">
        <thead>
            <tr>
               @* <th>Profile Link</th>*@
                <th>Last Name</th>
                <th>First Name</th>
                <th>Library Card Id</th>
                <th>Overdue Fees</th>
                <th>Home Library</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patron in Model.CustomerViewModels)
            {
                <tr>
                   @* <td id="patronIcon"><a asp-controller="Patron" asp-action="Detail" asp-route-id="@patron.Id"><i class="fa fa-user fa-2x"></i></a></td>*@
                    <td>@patron.LastName</td>
                    <td>@patron.FirstName</td>
                    <td>@patron.LibraryCardId</td>
                    <td>@patron.OverdueFees</td>
                    <td>@patron.LocalBranch</td>
                    <td> <a class="btn btn-primary" type="submit" asp-controller="Customers"  asp-action="Detail" asp-route-id="@patron.Id">Detail</a></td>
                </tr> 
            }
        </tbody>
    </table>
</div>